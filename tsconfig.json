{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["dom", "es2019"],
    "allowJs": false,
    "outDir": "./dist",
    "declaration": true,
    "removeComments": true,
    "downlevelIteration": true,
    "strict": true,
    "strictFunctionTypes": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "listEmittedFiles": true,
    "pretty": true,
    "diagnostics": true,
    "sourceMap": true
  },
  "include": ["lib", "tests"],
  "exclude": ["dist"]
}
